{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "deploy with netconsole",
            "type": "process",
            "group": "build",
            "command": "${config:python.pythonPath}",
            "args": [
                "robot.py",
                "deploy",
                "--nc"
            ]
        },
        {
            "label": "deploy",
            "type": "process",
            "group": "build",
            "command": "${config:python.pythonPath}",
            "args": [
                "robot.py",
                "deploy"
            ]
        },
        {
            "label": "deploy (debug mode)",
            "type": "process",
            "group": "build",
            "command": "${config:python.pythonPath}",
            "args": [
                "robot.py",
                "deploy",
                "--debug",
                "--nc"
            ]
        },
        {
            "label": "test",
            "type": "process",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "command": "${config:python.pythonPath}",
            "args": [
                "robot.py",
                "test"
            ]
        }
    ]
}
